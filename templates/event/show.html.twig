{% extends 'base.html.twig' %}

{% block title %}{{ 'Show'|trans }}{% endblock %}

{% block content %}
    <div class="page d-flex flex-column">
        <div class="p-2">
            <h1>{{ event.title }}</h1>
        </div>
        <div class="p-2 flex-grow-1">
            {% set reactions = event.reactions|map(reaction => { id: reaction.id }) %}
            <div id="app" data-options="{{ options|merge({reactions: reactions})|json_encode }}">{{ 'Loading app â€¦'|trans }}</div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('event/show') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('event/show') }}
{% endblock %}
